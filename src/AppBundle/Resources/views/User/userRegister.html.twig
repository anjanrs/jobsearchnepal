{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bower_components/bootstrapvalidator/dist/css/bootstrapValidator.min.css') }}">
{% endblock %}
{% block banner %}{% endblock %}
{% block body %}
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="page-header">
                    <h3>Register now</h3>
                </div>
                {{ form_start(form,{'attr': {'id': 'userregistration', 'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    {{ form_errors(form.fullname) }}
                    {{ form_errors(form.email) }}
                    {{ form_errors(form.password) }}
                    <div class="form-group">
                        {{ form_label(form.fullname, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.fullname,{'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-6">
                        {{ form_widget(form.email,{'attr': {'class': 'form-control'}})  }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.password,{'attr': {'class': 'form-control'}})  }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            {{ form_widget(form.register_worker,{'attr': {'class': 'btn btn-default btn-primary'}}) }}&nbsp;
                            {{ form_widget(form.register_employer,{'attr': {'class': 'btn btn-default btn-primary'}}) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block footer_javascripts %}
    {{ parent() }}
    <script>
        requirejs(['appjs/user-registration']);
    </script>
{% endblock %}

