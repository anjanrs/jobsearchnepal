{% extends 'base.html.twig' %}
{% block banner %}{% endblock %}
{% block body %}
    <div class="col-sm-12">
        <div class="page-header">
            <h3>Application for {{ job.title }}</h3>
        </div>
    </div>
    <div class="col-sm-7">
        <div class="page-header">
            <h2>{{ job.title }}</h2>
        </div>
        <div class="form-group">
            <p>{{ job.description }}</p>
        </div>

    </div>
    <div class="col-sm-5">
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_start(form, {'attr': {'id': 'jobapplication', 'novalidate': 'novalidate'}}) }}
                {{ form_errors(form) }}
                {{ form_errors(form.name) }}
                {{ form_errors(form.email) }}
                {{ form_errors(form.phoneNo) }}
                {{ form_errors(form.coverLetter) }}
                <ul>
                    {% for err in errors %}
                        <li> {{ err.message }}</li>
                    {% endfor %}
                </ul>
                <div class="page-header">
                    <h3>Personal Details</h3>
                </div>
                <div class="form-group">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.phoneNo, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.phoneNo, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="page-header">
                    <h3>Documents for this application</h3>
                </div>
                <div class="form-group">
                    {{ form_label(form.coverLetter, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.coverLetter, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.uploadedFile,{"attr": {"class": "form-control", "style": "display:none"}}) }}
                    {{ form_widget(form.uploadfile, {'attr': {'class': 'btn btn-default btn-success'}}) }}
                </div>
                <div class="form-group">
                    <div class="radio" id="new-resume" style="display:none">
                        <label>
                            {{ form_widget(form.resumeselect[0]) }}
                            {{ form_label(form.resumeselect[0]) }}
                        </label>
                    </div>
                    {% if  form.resumeselect[1] is defined %}
                    <div class="radio">
                        <label>
                            {{ form_widget(form.resumeselect[1]) }}
                            {{ form_label(form.resumeselect[1]) }}
                        </label>
                    </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_widget(form.applyjob, {'attr': {'class': 'btn btn-default btn-primary btn-lg'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
{% block footer_javascripts %}
    {{ parent() }}
    <script>
        requirejs(['appjs/apply-job']);
    </script>
{% endblock %}


