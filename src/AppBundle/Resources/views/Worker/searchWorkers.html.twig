{% extends 'base.html.twig' %}
{% block banner %}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-3">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.searchKey, "Keyword") }}
                    {{ form_widget(form.searchKey, {"attr": {"class": "form-control", 'placeholder': 'Search for..'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.jobCategory, "Keyword") }}
                    {{ form_widget(form.jobCategory, {"attr": {"class": "form-control"}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.location, "Keyword") }}
                    {{ form_widget(form.location, {"attr": {"class": "form-control"}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.rateType, "Keyword") }}
                    {{ form_widget(form.rateType, {"attr": {"class": "form-control"}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.rate, "Keyword") }}
                    {{ form_widget(form.rate, {"attr": {"class": "form-control"}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.btnsearch,{'attr': {'class': 'btn btn-default btn-primary', 'type': 'button'}})}}
                </div>
            {{ form_end(form) }}
        </div>
        <div class="col-sm-9 col-xs-12">
            {% for worker in workers %}
                    <h4><a href="">{{ worker.fullname}}</a></h4>
            {% endfor %}
        </div>
    </div>
{% endblock %}