{% extends 'account.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bower_components/selectize/dist/css/selectize.bootstrap3.css') }}">
    <link rel="stylesheet" href="{{ asset('bower_components/selectize/dist/css/selectize.css') }}">
{% endblock %}
{% block account_body %}
    <div class="page-header">
        <h3>Update Skills</h3>
    </div>
    {{ form_start(form, {'attr': {'id': 'update-worker-skills', 'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
    {{ form_errors(form.skills) }}
    <div class="form-group">
        {{ form_label(form.skills, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.skills, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-default btn-primary'}}) }}
        </div>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer_javascripts %}
    {{ parent() }}
    <script>
        requirejs(['appjs/worker-skills']);
    </script>
{% endblock %}