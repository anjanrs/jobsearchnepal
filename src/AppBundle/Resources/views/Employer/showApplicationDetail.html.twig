{% extends 'base.html.twig' %}
{% block banner %}
{% endblock %}
{% block body %}
    <div class='col-sm-12'>
        <div class="page-header">
              <h3>{{ application.job.title }}</h3>
        </div>
    </div>
    <div class='col-sm-8'>
        <div class="panel panel-default">
            <div class="panel-body">
                {{ application.applicationDate }}
            </div>
        </div>
    </div>
    <div class='col-sm-4'>
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_start(form, {'attr': {'id': 'message', 'novalidate': 'novalidate'}})}}
                {{ form_errors(form) }}
                {{ form_errors(form.message) }}
                <div class='form-group'>
                    {{ form_label(form.message, "Send message to " ~ application.name, {'label_attr': {'class': 'control-label'}}) }}
                    
                        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class='form-group'>
                        {{ form_widget(form.send_message, {'attr': {'class': 'btn btn-default btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
           </div>
        </div>
    </div>
{% endblock %}