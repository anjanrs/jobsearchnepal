{% extends 'base.html.twig' %}
{% block banner %}{% endblock %}
{% block body %}
    <div class="page-header">
        <h3>My Job Posts</h3>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
            
            <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Job Title</th>
                    <th>Post Date</th>
                    <th colspan="2"></th>
                </tr>
                </thead>
                <tbody>
                {% for job in jobsPosted %}
                    <tr>
                        <td>{{ job.title }}</td>
                        <td>{{ job.postdate|date('Y-m-d') }}</td>
                        <td><a href="{{ path('emp-job-detail', {'id': job.id}) }}">View Detail</a></td>
                        <td><a href="{{ path('emp-job-applications', {'id': job.id}) }}">View Applications</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer_javascripts %}
    {{ parent() }}
    <script>
        requirejs(['appjs/emp-jobsposted']);
    </script>
{% endblock %}