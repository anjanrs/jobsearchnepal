{% extends "::account.html.twig" %}
{% block account_body %}
    <div class="page-header">
        <h3>Change Username</h3>
    </div>
    {{ form_start(form,{'attr': {'id': 'editusername', 'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form._username, null, {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-6">
                {{ form_widget(form._username,{"attr":{"class": "form-control"}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form._password, null, {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-6">
                {{ form_widget(form._password,{"attr":{"class": "form-control"}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.save, {"attr": {"class": "btn btn-default btn-primary"}}) }}
            </div>
        </div>
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}
    {{ form_end(form) }}
{% endblock %}