{% extends "::account.html.twig" %}
{% block account_body %}
    <div class="page-header">
        <h3>Change Password</h3>
    </div>
    {{ form_start(form, {"attr": {"id": "editpassword", "novalidate": "novalidate", "class": "form-horizontal"}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.current_password, null, {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.current_password,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.first, null, {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.password.first,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.second, null, {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.password.second,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.save,{"attr":{"class": "btn btn-default btn-primary"}}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}