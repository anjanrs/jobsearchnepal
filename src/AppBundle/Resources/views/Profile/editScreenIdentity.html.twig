{% extends 'account.html.twig' %}
{% block account_body %}
    <div class="page-header">
        <h3>Screen Identity</h3>
    </div>
    {{ form_start(form,{'attr': {'id': 'screenidentity', 'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        {{ form_widget(form.uploadedFile,{"attr": {"class": "form-control", "style": "display:none"}}) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <img class="img-thumbnail" src="{{ asset('images/uploads/emp/screenidentity/' ~ screenImage) }}" style="width:200px;height:auto;"/><br><br>
                {{ form_widget(form.upload, {"attr": {"class": "btn btn-default btn-primary"}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.screen_name, null, {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.screen_name,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.save_screen_identity, {"attr": {"class": "btn btn-default btn-primary"}}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
{% block footer_javascripts %}
    {{ parent() }}
    <script>
        requirejs(['appjs/user-screenidentity']);
    </script>

{% endblock %}