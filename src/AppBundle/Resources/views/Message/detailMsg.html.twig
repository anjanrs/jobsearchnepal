{% extends 'base.html.twig' %}
{% block banner %}{% endblock %}
{% block body %}
	<div class="col-sm-12">
		<div class="page-header">
			<h3>Message</h3>
		</div>
	</div>
	<div class="col-sm-9">
		<div class="panel panel-default">
			<div class="panel-body">
				{{ msg.message|raw }}
			</div>
		</div>
	</div>
	<div class="col-sm-3">
		<div class="panel panel-default">
			<div class="panel-body">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
				{{ form_errors(form) }}
				{{ form_errors(form.message) }}
				<div class="form-group">
					{% set toUser = (app.user.id == msg.fromUser.id) ? msg.toUser.fullname : msg.fromUser.fullname %}
					{{ form_label(form.message, "Send Message To " ~ toUser, {'label_attr': {'class': 'control-label'}}) }}
					{{ form_widget(form.message,{'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-gorup">
					{{ form_widget(form.send_msg,{'attr': {'class': 'btn btn-default btn-primary'}})}}
				</div>
				{{ form_end(form) }}				
			</div>
		</div>
	</div>
{% endblock %}